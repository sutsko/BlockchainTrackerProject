@model IEnumerable<Asp.netCoreMVCCrud1.Models.Project>


@{
    ViewData["Title"] = "Index";
}

<h4>Project Register </h4>

<p>
    <a asp-action="AddOrEdit">Insert new project</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ArticleHeadline)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArticleUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArticleDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArticleDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Confidentiality)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrganizationId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IndustryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UseCaseId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Maturity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TechnicalVendor)
            </th>
            <th>
                <a asp-action="AddOrEdit" class="btn btn-succes" ><i class="fa fa-plus-square"></i>Project</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ArticleHeadline)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArticleUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArticleDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArticleDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Confidentiality)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrganizationId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IndustryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UseCaseId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Maturity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TechnicalVendor)
            </td>
            <td>
                <!-- <a asp-action="Edit" asp-route-id="@item.ProjectId">Edit</a> |-->
                <a asp-action="AddOrEdit" asp-route-id="@item.ProjectId"><i class="fa fa-marker fa-lg"></i></a> |
                <a asp-action="Details" asp-route-id="@item.ProjectId">Details</a> |
                <!--The following delete function will call the action method (asp="**") called "Delete" and send with it/passing the corresponding projectid
        into an id parametre
        The onclick="confirm" is an javascript function that will prompt an confirm text box-->
                <a asp-action="Delete" asp-route-id="@item.ProjectId" class="text-danger ml-1" onclick="return confirm('Are you sure you want to delete this project?')"><i class="fa fa-trash-alt fa-lg"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
